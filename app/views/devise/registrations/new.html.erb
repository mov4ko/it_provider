<div class="account_grid">
  <div class="container">
  <%= devise_error_messages! %>
     <div class="register">

          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

         <div class="register-top-grid">
           <h4 class="tz-title-5 tzcolor-blue">
                       <p class="tzweight_Bold"><span class="m_20">Персональна інформація</span></p>
                     </h4>
           <div>
            <span class="m_25">Ім’я<label>*</label></span>
            <%= f.text_field :first_name %>
           </div>
           <div>
            <span class="m_25">Прізвище<label>*</label></span>
            <%= f.text_field :last_name %> 
           </div>
           <div>
             <span class="m_25">Email Address<label>*</label></span>
             <%= f.email_field :email, autofocus: true %>
           </div>
           </div>
           <div class="clearfix"> </div>
             <div class="register-bottom-grid">
            <h4 class="tz-title-5 tzcolor-blue">
                           <p class="tzweight_Bold"><span class="m_20">Інформація для входу</span></p>
                        </h4>
               <div>
                <span class="m_25">Пароль<label>*</label></span>
                <%= f.password_field :password, autocomplete: "off" %>
               </div>
               <div>
                <span class="m_25">Підтвердіть пароль<label>*</label></span>
                <%= f.password_field :password_confirmation, autocomplete: "off" %>
               </div>
               <div class="clearfix"> </div>
           </div>
           <div class="clearfix"> </div>
            <div class="register-but">
                 <input type="submit" value="submit">
                 <div class="clearfix"> </div>
            </div>
        <% end %>
       </div>
      </div>
</div>